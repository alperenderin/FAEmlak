@model List<FAEmlak.Data.City>
@using FAEmlak.Helpers
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "İller";
}

@section Stylesheets{
<!-- Data Table JS
		============================================ -->
    <link rel="stylesheet" href="css/jquery.dataTables.min.css">
}

<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-support"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>İller</h2>
                                    <p>Sitedeki illeri burada listeyebilirsiniz.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcomb area End-->
<!-- Data Table area Start-->
<div class="data-table-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="data-table-list">
                    <div class="table-responsive">
                        <table id="data-table-basic" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>İl</th>
                                    <th>İlçe Sayısı</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.CityId</td>
                                        <td>@item.Name</td>
                                        <td>@item.States.Count</td>
                                        <td>
                                            <a asp-controller="Admin" asp-action="EditCity" asp-route-CityId="@item.CityId" style="font-size: 16px; margin-right: 10px">
                                                <i class="fa fa-pencil" aria-hidden="true"></i>
                                            </a>
                                            <a asp-controller="Admin" asp-action="DeleteCity" asp-route-CityId="@item.CityId" style="font-size: 16px">
                                                <i class="fa fa-trash" aria-hidden="true"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>#</th>
                                    <th>İl</th>
                                    <th>İlçe Sayısı</th>
                                    <th>İşlemler</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Data Table JS
        ============================================ -->
    <script src="~/admin/js/data-table/jquery.dataTables.min.js"></script>
    <script src="~/admin/js/data-table/data-table-act.js"></script>
}