@model FAEmlak.Models.AdminStateViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = Localizer["PageTitle"];
}

@section Stylesheets{
    <link rel="stylesheet" href="~/admin/css/bootstrap-select/bootstrap-select.css">
}

<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-support"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>@Localizer["PageTitle"]</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcomb area End-->
<!-- Data Table area Start-->
<div class="data-table-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-element-list">
                    <form method="post" asp-controller="Admin" asp-action="EditState">
                        <div class="row">
                            <input type="hidden" name="Id" value="@Model.state.Id">
                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group ic-cmp-int">
                                    <label>@Localizer["State"]</label>
                                    <div class="nk-int-st">
                                        <input type="text" id="Name" name="Name" class="form-control" value="@Model.state.Name" required placeholder="İlçe Adı">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group ic-cmp-int">
                                    <label>@Localizer["City"]</label>
                                    <div class="bootstrap-select fm-cmp-mg">
                                        <select id="role" name="CityId" class="selectpicker">
                                            @foreach (var item in Model.cities)
                                            {
                                                <option value="@item.CityId">@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                <button type="submit" class="btn btn-primary notika-btn-primary btn-md waves-effect">@Localizer["Update"]</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/admin/js/bootstrap-select/bootstrap-select.js"></script>
}