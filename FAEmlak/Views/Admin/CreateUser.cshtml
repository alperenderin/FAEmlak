@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@using FAEmlak.Helpers
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = Localizer["PageTitle"];
}

@section Stylesheets{
    <link rel="stylesheet" href="~/admin/css/bootstrap-select/bootstrap-select.css">
}

<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-support"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>@Localizer["PageTitle"]</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcomb area End-->
<!-- Data Table area Start-->
<div class="data-table-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-element-list">
                    <div asp-validation-summary="All"></div>
                    <form method="post" asp-controller="Admin" asp-action="CreateUser">
                        <div class="row">
                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group ic-cmp-int">
                                    <label>@Localizer["Name"]</label>
                                    <div class="nk-int-st">
                                        <input type="text" id="FirstName" name="FirstName" class="form-control" required>
                                        <span  class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group ic-cmp-int">
                                    <label>@Localizer["Surname"]</label>
                                    <div class="nk-int-st">
                                        <input type="text" id="LastName" name="LastName" class="form-control" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group ic-cmp-int">
                                    <label>@Localizer["Email"]</label>
                                    <div class="nk-int-st">
                                        <input type="text" class="form-control" name="Email" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group ic-cmp-int">
                                    <label>
                                        @Localizer["Password"]
                                    </label>
                                    <div class="nk-int-st">
                                        <input type="password" class="form-control" name="Password" required>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group ic-cmp-int">
                                    <label>
                                        @Localizer["ConfirmPassword"]
                                    </label>
                                    <div class="nk-int-st">
                                        <input type="password" class="form-control" name="ConfirmPassword" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                <label>@Localizer["Roles"]</label>
                                <select name="RoleId" asp-items="@ViewBag.Roles" id="RoleId" class="form-control">
                                </select>
                            </div>
                        </div>
                        <div class="row text-center">
                            <button type="submit" class="btn btn-primary notika-btn-primary btn-md waves-effect">@Localizer["Create"]</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/admin/js/bootstrap-select/bootstrap-select.js"></script>
}