@model FAEmlak.Models.AdminUserViewModel
@using FAEmlak.Helpers
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = Localizer["PageTitle"];
}

@section Stylesheets{
    <link rel="stylesheet" href="~/admin/css/bootstrap-select/bootstrap-select.css">
}

<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-support"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>@Localizer["PageTitle"]</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcomb area End-->
<!-- Data Table area Start-->
<div class="data-table-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-element-list">
                    <form method="post" asp-controller="Admin" asp-action="EditUser">
                        <input type="hidden" name="UserId" value="@Model.UserId">
                        <div class="row">
                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group ic-cmp-int">
                                    @Html.LabelFor(x => x.FirstName)
                                    <div class="nk-int-st">
                                        <input type="text" id="FirstName" name="FirstName" class="form-control" value="@Model.FirstName" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group ic-cmp-int">
                                    @Html.LabelFor(x => x.LastName)
                                    <div class="nk-int-st">
                                        <input type="text" id="LastName" name="LastName" class="form-control" value="@Model.LastName" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group ic-cmp-int">
                                    @Html.LabelFor(x => x.Email)
                                    <div class="nk-int-st">
                                        <input type="text" class="form-control" name="Email" value="@Model.Email" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group ic-cmp-int">
                                    @Html.LabelFor(x => x.Password)
                                    <div class="nk-int-st">
                                        <input type="password" class="form-control" name="Password" required>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group ic-cmp-int">
                                    @Html.LabelFor(x => x.ConfirmPassword)
                                    <div class="nk-int-st">
                                        <input type="password" class="form-control" name="ConfirmPassword" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                <label>@Localizer["Roles"]</label>
                                <div class="bootstrap-select fm-cmp-mg">
                                    <select id="role" name="RoleId" class="selectpicker">
                                        @foreach (var item in Model.Roles)
                                        {

                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row text-center">
                            <button type="submit" class="btn btn-primary notika-btn-primary btn-md waves-effect">@Localizer["Update"]</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/admin/js/bootstrap-select/bootstrap-select.js"></script>
}