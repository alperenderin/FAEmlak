@model List<FAEmlak.Data.Property>
@using FAEmlak.Helpers
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "İlanlar";
}

@section Stylesheets{
<!-- Data Table JS
		============================================ -->
    <link rel="stylesheet" href="css/jquery.dataTables.min.css">
}

<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-house"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>İlanlar</h2>
                                    <p>Sitedeki ilanlar burada listelenir.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcomb area End-->
<!-- Data Table area Start-->
<div class="data-table-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="data-table-list">
                    <div class="table-responsive">
                        <table id="data-table-basic" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>İlan Başlığı</th>
                                    <th>m²</th>
                                    <th>Oda Saysı</th>
                                    <th>İl / İlçe</th>
                                    <th>Fiyat</th>
                                    <th>Oluşturma Tarihi</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td><a asp-controller="Property" asp-action="Detail" asp-route-Id="@item.PropertyId">@item.Title</a></td>
                                    <td>@item.Area</td>
                                    <td>@(EnumHelper<FAEmlak.Data.RoomCount>.GetDisplayValue(item.RoomCount))</td>
                                    <td>@item.State.City.Name / @item.State.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.Created.Date.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <a asp-controller="Admin" asp-action="EditProperty" asp-route-PropertyId="@item.PropertyId" style="font-size: 16px; margin-right: 10px">
                                            <i class="fa fa-pencil" aria-hidden="true"></i>
                                        </a>
                                        <a asp-controller="Admin" asp-action="DeleteProperty" asp-route-PropertyId="@item.PropertyId" onclick="return confirm('Are you sure you want to delete this item')" style="font-size: 16px">
                                            <i class="fa fa-trash" aria-hidden="true"></i>
                                        </a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>İlan Başlığı</th>
                                    <th>m²</th>
                                    <th>Oda Saysı</th>
                                    <th>İl / İlçe</th>
                                    <th>Fiyat</th>
                                    <th>Oluşturma Tarihi</th>
                                    <th>İşlemler</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Data Table JS
        ============================================ -->
    <script src="~/admin/js/data-table/jquery.dataTables.min.js"></script>
    <script src="~/admin/js/data-table/data-table-act.js"></script>
}