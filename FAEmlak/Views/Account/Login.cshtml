@model LoginModel
<div class="row my-5">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
            <article class="card-body">
                <a asp-controller="Account" asp-action="Login" class="float-right btn btn-outline-primary">Sign up</a>
                <h4 class="card-title mb-4 mt-1">Sign in</h4>
                <hr>
                <form asp-controller="Account" asp-action="Login" method="post">
                    <div class="form-group">
                        <input class="form-control" asp-for="Email" placeholder="Email or login" type="email">
                    </div>
                    <div class="form-group">
                        <input class="form-control" asp-for="Password" placeholder="******" type="password">
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block"> Login  </button>
                            </div>
                        </div>
                        <div class="col-md-6 text-right">
                            <a class="small" href="#">Forgot password?</a>
                        </div>
                    </div>
                </form>
            </article>
        </div>
    </div>
</div>