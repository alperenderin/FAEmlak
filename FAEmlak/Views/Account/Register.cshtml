@model RegisterModel

<div class="row mt-5">
    <div class="col-lg-4 mx-auto">
        <div class="card">
            <div class="card-body">
                <a href="" class="float-right btn btn-outline-primary">Giriş Yap</a>
                <h4 class="card-title mb-4 mt-1">Üye Ol</h4>
                <hr>
                <form asp-controller="Account" asp-action="Register" method="POST">
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">FirstName</label>
                                <input class="form-control py-4" asp-for="FirstName" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">LastName</label>
                                <input class="form-control py-4" asp-for="LastName" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1">Email</label>
                                <input class="form-control py-4" asp-for="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1">Password</label>
                                <input class="form-control py-4" asp-for="Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-4 mb-0"><button class="btn btn-primary btn-block" type="submit">Sign Up</button></div>
                </form>
            </div>
            <div class="card-footer text-center">
                <div class="small"><a href="/account/login">Hesabınız zaten var mı? Giriş Yap.</a></div>
            </div>
        </div>
    </div>
</div>
